{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AuthConnectionString": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=AceJobAgencyAuth;Integrated Security=True;"
  },

  "_comment": "Each policy can be toggled individually between test and production mode",

  "PolicyMode": {
    "SessionTimeout_UseTestMode": false,
    "Lockout_UseTestMode": false,
    "MinPasswordAge_UseTestMode": false,
    "MaxPasswordAge_UseTestMode": false
  },

  "SessionTimeout": {
    "TestSeconds": "10",
    "ProductionMinutes": "45"
  },

  "LockoutPolicy": {
  "MaxFailedAttempts": "3",
    "TestMinutes": "1",
    "ProductionMinutes": "15"
  },

  "PasswordPolicy": {
    "HistoryCount": "2",
    "MinAge_TestMinutes": "1",
    "MinAge_ProductionMinutes": "5",
    "MaxAge_TestMinutes": "2",
    "MaxAge_ProductionDays": "90"
  }
}
