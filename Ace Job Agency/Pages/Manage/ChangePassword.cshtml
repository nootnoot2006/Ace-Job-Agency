@page
@model Ace_Job_Agency.Pages.Manage.ChangePasswordModel
@{
 ViewData["Title"] = "Change Password";
}

<div class="container" style="max-width: 480px; margin-top: 2rem;">
 <div class="card">
 <div class="card-header" style="text-align: center; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
 <h2 style="margin: 0; color: white; display: flex; align-items: center; justify-content: center; gap: 0.75rem;">
 <i class="bi bi-key-fill" style="font-size: 1.75rem;"></i>
 Change Password
 </h2>
 <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8); font-size: 0.95rem;">Update your account security</p>
 </div>

 <div class="card-body">
 <form method="post">
 <div asp-validation-summary="All" class="alert alert-danger"></div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.OldPassword">
 <i class="bi bi-lock me-1"></i>Current Password
 </label>
 <input asp-for="Input.OldPassword" type="password" class="form-control" placeholder="Enter your current password" />
 <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
 </div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.NewPassword">
 <i class="bi bi-lock-fill me-1"></i>New Password
 </label>
 <input asp-for="Input.NewPassword" type="password" class="form-control" placeholder="Create a new password (min 12 characters)" />
 <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
 </div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.ConfirmPassword">
 <i class="bi bi-check-circle me-1"></i>Confirm New Password
 </label>
 <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
 <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
 </div>

 <button type="submit" class="btn btn-primary btn-block btn-lg" style="margin-top: 1rem;">
 <i class="bi bi-check2-circle me-2"></i>Update Password
 </button>
 </form>

 <hr>

 <a href="/Index" class="btn btn-ghost btn-block">
 <i class="bi bi-arrow-left me-1"></i>Back to Profile
 </a>
 </div>
 </div>
</div>
