@using Microsoft.AspNetCore.Identity
@using Ace_Job_Agency.Models
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>@ViewData["Title"] - Ace Job Agency</title>
 
 <!-- Google Fonts -->
 <link rel="preconnect" href="https://fonts.googleapis.com">
 <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
 <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
 
 <!-- Bootstrap Icons -->
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
 
 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/Ace_Job_Agency.styles.css" asp-append-version="true" />
</head>
<body>
 <header>
 <nav class="navbar navbar-expand-lg">
 <div class="container">
 <a class="navbar-brand" asp-area="" asp-page="/Index">
 <i class="bi bi-briefcase-fill me-2"></i>Ace Job Agency
 </a>
 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="#navbarNav"
 aria-expanded="false" aria-label="Toggle navigation">
 <i class="bi bi-list" style="font-size:1.25rem; color: var(--navy);"></i>
 </button>
 <div class="collapse navbar-collapse" id="navbarNav">
 @{
 var currentPath = Context.Request.Path.Value ?? string.Empty;
 var isLoginPage = currentPath.Equals("/Login", StringComparison.OrdinalIgnoreCase);
 var showAuthNav = SignInManager.IsSignedIn(User) && !isLoginPage;
 }
 @if (showAuthNav)
 {
 <ul class="navbar-nav me-auto">
 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-page="/Index">
 <i class="bi bi-house-door me-1"></i>Home
 </a>
 </li>
 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-page="/Manage/ChangePassword">
 <i class="bi bi-key me-1"></i>Password
 </a>
 </li>
 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-page="/Manage/TwoFactorSetup">
 <i class="bi bi-shield-lock me-1"></i>2FA
 </a>
 </li>
 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-page="/Account/Sessions">
 <i class="bi bi-laptop me-1"></i>Sessions
 </a>
 </li>
 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-page="/Privacy">
 <i class="bi bi-file-earmark-text me-1"></i>Privacy
 </a>
 </li>
 </ul>
 
 <ul class="navbar-nav">
 <li class="nav-item">
 <a class="btn btn-outline" asp-area="" asp-page="/Logout">
 <i class="bi bi-box-arrow-right me-1"></i>Logout
 </a>
 </li>
 </ul>
 }
 else
 {
 <ul class="navbar-nav ms-auto">
 <li class="nav-item me-2">
 <a class="btn btn-ghost" asp-page="/Login">
 <i class="bi bi-box-arrow-in-right me-1"></i>Login
 </a>
 </li>
 <li class="nav-item">
 <a class="btn btn-primary" asp-page="/Register">
 <i class="bi bi-person-plus me-1"></i>Register
 </a>
 </li>
 </ul>
 }
 }
 </div>
 </div>
 </nav>
 </header>

 <div class="container main-content">
 <main role="main">
 @RenderBody()
 </main>
 </div>

 <footer>
 <div class="container">
 <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap:1rem;">
 <div style="display: flex; align-items: center; gap:0.5rem;">
 <i class="bi bi-briefcase-fill" style="font-size:1.25rem; color: var(--primary);"></i>
 <span style="font-weight:600;">Ace Job Agency</span>
 </div>
 <div style="font-size:0.85rem;">
 &copy;2026 Ace Job Agency. All rights reserved.
 </div>
 <div>
 <a asp-area="" asp-page="/Privacy" style="font-size:0.85rem;">
 <i class="bi bi-shield-check me-1"></i>Privacy Policy
 </a>
 </div>
 </div>
 </div>
 </footer>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>

 @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
