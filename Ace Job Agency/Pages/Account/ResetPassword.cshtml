@page
@model Ace_Job_Agency.Pages.Account.ResetPasswordModel
@{
 ViewData["Title"] = "Reset Password";
}

<div class="container" style="max-width: 500px; margin-top: 40px;">
 <div class="card">
 <div class="card-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; text-align: center;">
 <h2 style="margin: 0; color: white;">Reset Your Password</h2>
 <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8); font-size: 0.9rem;">Create a new secure password</p>
 </div>

 <div class="card-body">
 <form method="post">
 <div asp-validation-summary="All" class="alert alert-danger"></div>

 <input type="hidden" asp-for="Input.Token" />

 <div class="form-group">
 <label class="form-label" asp-for="Input.Email">Email Address</label>
 <input asp-for="Input.Email" type="email" class="form-control" placeholder="you@example.com" />
 <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
 </div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.NewPassword">New Password</label>
 <input asp-for="Input.NewPassword" type="password" class="form-control" placeholder="Min 12 characters with complexity" />
 <span asp-validation-for="Input.NewPassword" class="invalid-feedback"></span>
 </div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
 <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
 <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback"></span>
 </div>

 <button type="submit" class="btn btn-primary btn-block" style="padding: 0.75rem; font-size: 1.1rem;">Reset Password</button>
 </form>

 <hr style="margin: 2rem 0; border: none; border-top: 1px solid #e5e7eb;">

 <p style="text-align: center;">
 <a href="/Login" style="font-weight: 600;">? Back to Login</a>
 </p>
 </div>
 </div>
</div>
