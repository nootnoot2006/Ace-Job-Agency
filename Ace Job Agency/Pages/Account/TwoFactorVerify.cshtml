@page
@model Ace_Job_Agency.Pages.Account.TwoFactorVerifyModel
@{
 ViewData["Title"] = "Verify Code";
}

<div class="container" style="max-width: 420px; margin-top: 3rem;">
 <div class="card">
 <div class="card-header" style="text-align: center; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
 <h2 style="margin: 0; color: white; display: flex; align-items: center; justify-content: center; gap: 0.75rem;">
 <i class="bi bi-shield-check" style="font-size: 1.75rem;"></i>
 Verify Your Identity
 </h2>
 <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.9); font-size: 0.95rem;">Enter the 6-digit code sent to your email</p>
 </div>

 <div class="card-body">
 <div class="alert alert-info" style="display: flex; align-items: center; gap: 0.75rem;">
 <i class="bi bi-envelope-check" style="font-size: 1.5rem;"></i>
 <div>
 <strong>Code Sent!</strong>
 <p style="margin: 0; font-size: 0.9rem;">Check your email for a 6-digit code. Expires in 5 minutes.</p>
 </div>
 </div>

 <form method="post">
 <div asp-validation-summary="All" class="alert alert-danger"></div>

 <div class="form-group" style="text-align: center;">
 <label class="form-label" asp-for="Input.Code">
 <i class="bi bi-123 me-1"></i>Verification Code
 </label>
 <input asp-for="Input.Code" 
 class="form-control" 
 placeholder="000000"
 maxlength="6"
 inputmode="numeric"
 pattern="[0-9]{6}"
 style="font-size: 2rem; letter-spacing: 0.75rem; text-align: center; font-weight: 700; padding: 1rem;" 
 autocomplete="one-time-code" />
 <span asp-validation-for="Input.Code" class="text-danger"></span>
 </div>

 <button type="submit" class="btn btn-primary btn-block btn-lg" style="margin-top: 1.5rem;">
 <i class="bi bi-check2-all me-2"></i>Verify Code
 </button>
 </form>

 <hr>

 <p style="text-align: center; font-size: 0.9rem; color: var(--gray-500);">
 <i class="bi bi-question-circle me-1"></i>
 Didn't receive the code? Check your spam folder or
 <a href="/Login">try logging in again</a>.
 </p>
 </div>
 </div>
</div>
