@page
@model Ace_Job_Agency.Pages.Account.ForgotPasswordModel
@{
 ViewData["Title"] = "Forgot Password";
}

<div class="container" style="max-width: 500px; margin-top: 40px;">
 <div class="card">
 <div class="card-header" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; text-align: center;">
 <h2 style="margin: 0; color: white;">Forgot Password?</h2>
 <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8); font-size: 0.9rem;">We'll help you reset it</p>
 </div>

 <div class="card-body">
 <div class="alert alert-info" style="margin-bottom: 1.5rem;">
 <strong>?? How it works:</strong> Enter your email address and we'll send you a link to reset your password.
 </div>

 <form method="post">
 <div asp-validation-summary="All" class="alert alert-danger"></div>

 <div class="form-group">
 <label class="form-label" asp-for="Input.Email">Email Address</label>
 <input asp-for="Input.Email" type="email" class="form-control" placeholder="you@example.com" />
 <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
 </div>

 <button type="submit" class="btn btn-primary btn-block" style="padding: 0.75rem; font-size: 1.1rem;">Send Reset Link</button>
 </form>

 <hr style="margin: 2rem 0; border: none; border-top: 1px solid #e5e7eb;">

 <div style="text-align: center;">
 <p style="margin: 0;">Remember your password? <a href="/Login" style="font-weight: 600;">Sign in here</a></p>
 </div>
 </div>
 </div>
</div>
